---
import Layout from '@astro/layouts/Layout.astro';

import About from '@astro/components/sections/About.astro';
import Education from '@astro/components/sections/Education.astro';
import Experience from '@astro/components/sections/Experience.astro';
import Hero from '@astro/components/sections/Hero.astro';
import Projects from '@astro/components/sections/Projects.astro';
import Skills from '@astro/components/sections/Skills.astro';
import KeyboardManager from '@astro/components/KeyboardManager.astro'

import { basics } from "@cv"
const { name, label } = basics
---

<Layout title=`Portafolio de ${name} - ${label}`>
	<main>
		<Hero />
		<About />
		<Experience />
		<Education />
		<Projects />
		<Skills />
	</main>
	<KeyboardManager />
</Layout>

<style>
	main{
		padding: 4rem;
		margin: auto;
		width: 100%;
	}

	@media screen and (max-width: 738px) {
		main{
			padding: 4rem 2rem;
		}
	}
</style>
